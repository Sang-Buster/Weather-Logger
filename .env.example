# Weather Logger Configuration

# Serial port configuration
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=38400
SERIAL_TIMEOUT=1

# Logger configuration
LOG_DIR=/var/tmp/wx
DO_FLUSH=True

# UDP Server configuration
HOST=localhost
PORT_DATA=8150
PORT_CONTROL=8250
PORT_STATUS=8251

# UDP Sender Configuration
UDP_IP=127.0.0.1
UDP_PORT=5555
UDP_BROADCAST=false

# Data collection rates (in Hz)
HIGH_FREQ_RATE=32
STANDARD_RATE=1

# Debug level (0-2) 
DEBUG=1